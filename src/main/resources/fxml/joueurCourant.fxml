<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" prefHeight="250.0" prefWidth="250.0" spacing="25.0" style="-fx-background-image: url('images/icons/conteneurJoueurCourant.jpg');" type="VBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
   <HBox alignment="CENTER" spacing="55.0" VBox.vgrow="ALWAYS">
      <children>
         <HBox alignment="CENTER" spacing="10.0">
            <children>
               <ImageView fx:id="imageArgent" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../images/boutons/coins.png" />
                  </image>
               </ImageView>
                <Label fx:id="labelArgent" minHeight="-Infinity" minWidth="-Infinity">
                  <font>
                     <Font size="17.0" />
                  </font>
               </Label>
            </children>
         </HBox>
         <HBox alignment="CENTER" spacing="15.0">
            <children>
               <ImageView fx:id="imagePointRails" fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../images/boutons/rail.png" />
                  </image>
               </ImageView>
                <Label fx:id="labelPointRails" minHeight="-Infinity" minWidth="-Infinity">
                  <font>
                     <Font size="17.0" />
                  </font>
               </Label>
            </children>
         </HBox>
         <HBox alignment="CENTER" spacing="15.0">
            <children>
               <ImageView fx:id="imageJetonRails" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../images/boutons/point_rails.png" />
                  </image>
               </ImageView>
                <Label fx:id="labelJetonRails" minHeight="-Infinity" minWidth="-Infinity">
                  <font>
                     <Font size="17.0" />
                  </font>
               </Label>
            </children>
         </HBox>
         <StackPane>
            <children>
               <ImageView fx:id="imageScore" fitWidth="155.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../images/boutons/score.png" />
                  </image>
               </ImageView>
                <Label fx:id="labelScore" textFill="#eadd56">
                  <font>
                     <Font size="33.0" />
                  </font>
               </Label>
            </children>
         </StackPane>
      </children>
   </HBox>
   <HBox alignment="CENTER" spacing="100.0">
      <children>
         <HBox alignment="CENTER" spacing="20.0">
            <children>
               <ImageView fx:id="imageDeck" fitWidth="190.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                  <image>
                     <Image url="@../images/boutons/deck.png" />
                  </image>
               </ImageView>
               <Label fx:id="labelDeck">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Label>
            </children>
         </HBox>
         <HBox alignment="CENTER" spacing="20.0">
            <children>
               <ImageView fx:id="imageDefausse" fitWidth="240.0" pickOnBounds="true" preserveRatio="true" rotate="172.5" HBox.hgrow="ALWAYS">
                  <image>
                     <Image url="@../images/boutons/defausse.png" />
                  </image>
               </ImageView>
               <Label fx:id="labelDefausse">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Label>
            </children>
         </HBox>
      </children>
   </HBox>
   <ImageView fx:id="passer" fitWidth="170.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../images/boutons/passer.png" />
      </image>
   </ImageView>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</fx:root>
