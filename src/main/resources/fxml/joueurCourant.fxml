<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" spacing="20.0" style="-fx-background-image: url('images/icons/conteneurJoueurCourant.png'); -fx-background-size: contain; -fx-background-repeat: no-repeat" type="VBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
   <HBox alignment="CENTER" spacing="10.0">
      <children>
         <HBox alignment="CENTER" spacing="10.0">
            <children>
               <ImageView fx:id="imageArgent" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../images/boutons/coins.png" />
                  </image>
               </ImageView>
                <Label fx:id="labelArgent" minHeight="-Infinity" minWidth="-Infinity">
                  <font>
                     <Font size="17.0" />
                  </font>
               </Label>
            </children>
         </HBox>
         <HBox alignment="CENTER" spacing="15.0">
            <children>
               <ImageView fx:id="imagePointRails" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../images/boutons/rail.png" />
                  </image>
               </ImageView>
                <Label fx:id="labelPointRails" minHeight="-Infinity" minWidth="-Infinity">
                  <font>
                     <Font size="17.0" />
                  </font>
               </Label>
            </children>
         </HBox>
         <HBox alignment="CENTER" spacing="15.0">
            <children>
               <ImageView fx:id="imageJetonRails" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../images/boutons/point_rails.png" />
                  </image>
               </ImageView>
                <Label fx:id="labelJetonRails" minHeight="-Infinity" minWidth="-Infinity">
                  <font>
                     <Font size="17.0" />
                  </font>
               </Label>
            </children>
         </HBox>
         <StackPane>
            <children>
               <ImageView fx:id="imageScore" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../images/boutons/score.png" />
                  </image>
               </ImageView>
                <Label fx:id="labelScore" textFill="#eadd56">
                  <font>
                     <Font size="18" />
                  </font>
               </Label>
            </children>
         </StackPane>
      </children>
   </HBox>
   <HBox alignment="CENTER" spacing="50.0">
      <children>
         <HBox alignment="CENTER" spacing="20.0">
            <children>
               <ImageView fx:id="imageDeck" fitWidth="60" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                  <image>
                     <Image url="@../images/boutons/deck.png" />
                  </image>
               </ImageView>
               <Label fx:id="labelDeck">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Label>
            </children>
         </HBox>
         <HBox alignment="CENTER" spacing="20.0">
            <children>
               <ImageView fx:id="imageDefausse" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" rotate="172.5" HBox.hgrow="ALWAYS">
                  <image>
                     <Image url="@../images/boutons/defausse.png" />
                  </image>
               </ImageView>
               <Label fx:id="labelDefausse">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Label>
            </children>
         </HBox>
      </children>
   </HBox>
   <HBox>
      <Label text="Cartes jouées :" />
      <StackPane fx:id="cartesJouees"/>
      <Label text="Cartes reçues :" />
      <StackPane fx:id="cartesRecues" />
   </HBox>
</fx:root>
