<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<fx:root alignment="CENTER" spacing="15.0" prefWidth="300" type="HBox" stylesheets="@/css/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
style="-fx-background-image: url(images/icons/conteneurAutreJoueur.jpg); -fx-background-size: contain;">
    <Label fx:id="nomJoueur" alignment="CENTER"/>
    <HBox spacing="5" alignment="CENTER">
        <ImageView fx:id="imageJetonRails" fitWidth="25" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/boutons/point_rails.png" />
            </image>
        </ImageView>
        <Label fx:id="labelJetonRails" styleClass="labelJoueur"/>
    </HBox>
    <HBox spacing="5" alignment="CENTER">
        <ImageView fx:id="imageScore" fitWidth="35" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/boutons/score.png" />
            </image>
        </ImageView>
        <Label fx:id="labelScore" styleClass="labelJoueur"/>
    </HBox>
    <HBox spacing="5" alignment="CENTER">
        <ImageView fx:id="imageDeck" fitWidth="35" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
            <image>
                <Image url="@../images/boutons/deck.png" />
            </image>
        </ImageView>
        <Label fx:id="labelDeck" styleClass="labelJoueur"/>
    </HBox>
    <HBox spacing="5" alignment="CENTER">
        <ImageView fx:id="imageDefausse" fitWidth="35" pickOnBounds="true" preserveRatio="true" rotate="172.5" HBox.hgrow="ALWAYS">
            <image>
                <Image url="@../images/boutons/defausse.png" />
            </image>
        </ImageView>
        <Label fx:id="labelDefausse" styleClass="labelJoueur"/>
    </HBox>

</fx:root>
