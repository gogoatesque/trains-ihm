<fx:root type="BorderPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
   <center>
      <Pane>
         <VuePlateau fx:id="plateau" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
      </Pane>
   </center>
   <top>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <Label fx:id="nomJoueur"/>
         <Label fx:id="instruction"/>
      </VBox>
   </top>
   <right>
      <VBox>
         <VueJoueurCourant fx:id="vueJoueurCourant" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         </VueJoueurCourant>
         <Button fx:id="passer" text="passer"/>
      </VBox>

   </right>
   <left>
      <VBox fx:id="boiteReserve" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </left>
   <bottom>
      <HBox fx:id="boiteCarteEnMain"/>
   </bottom>
</fx:root>
